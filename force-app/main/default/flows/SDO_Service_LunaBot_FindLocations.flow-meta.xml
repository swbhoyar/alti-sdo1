    <apiVersion>57.0</apiVersion>
    <description>Calls SOQL to find up to 3 nearest locations</description>
    <environments>Default</environments>
    <interviewLabel>Einstein Bots - Find Locations Near Contact {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Einstein Bots - Find Locations Near Contact</label>
    <processMetadataValues>
