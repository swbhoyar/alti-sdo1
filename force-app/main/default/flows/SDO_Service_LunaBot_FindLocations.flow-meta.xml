        <name>varSOQL_query</name>
        <dataType>String</dataType>
        <isCollection>false</isCollection>
        <isInput>false</isInput>
        <isOutput>false</isOutput>
        <value>
            <stringValue>SELECT Id, Name, Location, Latitude, Longitude, Opening_Time__c, Closing_Time__c, TimeZone, Phone__c, VisitorAddressId FROM Location WHERE DISTANCE(Location, GEOLOCATION({!rvarContact.MailingLatitude}, {!rvarContact.MailingLongitude}), &apos;mi&apos;) &lt; 50 ORDER BY DISTANCE(Location, GEOLOCATION({!rvarContact.MailingLatitude}, {!rvarContact.MailingLongitude}), &apos;mi&apos;) ASC LIMIT 3</stringValue>
        </value>
    </variables>
