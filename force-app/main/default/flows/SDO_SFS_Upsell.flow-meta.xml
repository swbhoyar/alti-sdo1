        <dataType>String</dataType>
    </choices>
    <choices>
        <name>ChoiceYes</name>
        <choiceText>Yes - Choose a Product from the next page.</choiceText>
        <dataType>String</dataType>
        <value>
            <stringValue>Yes</stringValue>
        </value>
