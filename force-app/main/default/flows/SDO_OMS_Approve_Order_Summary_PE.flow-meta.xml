<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>58.0</apiVersion>
    <decisions>
        <name>Credit_Limit_Check</name>
        <label>Credit Limit Check</label>
        <locationX>314</locationX>
        <locationY>278</locationY>
        <defaultConnector>
            <targetReference>Credit_Hold_Status</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Credit Hold</defaultConnectorLabel>
        <rules>
            <name>No_Limit</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Get_Order_Summary.Account.CreditLimit__c</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Approve_No_Limit</targetReference>
            </connector>
            <label>No Limit</label>
        </rules>
        <rules>
            <name>Approved</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>fRemainingCredit</leftValueReference>
                <operator>GreaterThanOrEqualTo</operator>
                <rightValue>
                    <elementReference>Get_Order_Summary.GrandTotalAmount</elementReference>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>New_Account_Balance</targetReference>
            </connector>
            <label>Approved</label>
        </rules>
    </decisions>
    <description>Bill Macaulay 7/23
Credit Hold Logic - Use Platform Event Trigger</description>
    <environments>Default</environments>
    <formulas>
        <name>fNewBalance</name>
        <dataType>Currency</dataType>
        <expression>{!Get_Order_Summary.Account.Credit_Balance__c} + {!Get_Order_Summary.GrandTotalAmount}</expression>
        <scale>2</scale>
    </formulas>
    <formulas>
        <name>fRemainingCredit</name>
        <dataType>Currency</dataType>
        <expression>{!Get_Order_Summary.Account.CreditLimit__c} - {!Get_Order_Summary.Account.Credit_Balance__c}</expression>
        <scale>2</scale>
    </formulas>
