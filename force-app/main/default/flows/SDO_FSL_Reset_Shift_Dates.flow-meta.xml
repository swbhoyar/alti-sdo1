    <assignments>
        <name>Update_Shift_Start_and_End_Dates</name>
        <label>Update Shift Start and End Dates</label>
        <locationX>781</locationX>
        <locationY>334</locationY>
        <assignmentItems>
            <assignToReference>Loop_Shifts_and_Add_Days.StartTime</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>CalculateStartDate</elementReference>
            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>Loop_Shifts_and_Add_Days.EndTime</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>CalculateEndDate</elementReference>
            </value>
        </assignmentItems>
        <connector>
            <targetReference>Update_Shift</targetReference>
        </connector>
    </assignments>
    <formulas>
        <name>CalculateEndDate</name>
        <dataType>DateTime</dataType>
        <expression>{!Loop_Shifts_and_Add_Days.EndTime}+{!DaysToAdd}</expression>
    </formulas>
    <formulas>
        <name>CalculateStartDate</name>
        <dataType>DateTime</dataType>
        <expression>{!Loop_Shifts_and_Add_Days.StartTime} + {!DaysToAdd}</expression>
    </formulas>
    <formulas>
        <description>Calculates the number of days to add to SDO shifts</description>
        <name>DaysToAdd</name>
        <dataType>Number</dataType>
        <expression>{!Demo_Date}-DATEVALUE({!Get_Key_SDO_Shift.StartTime})</expression>
        <scale>0</scale>
    </formulas>
    <interviewLabel>FSL {!$Flow.CurrentDateTime}</interviewLabel>
