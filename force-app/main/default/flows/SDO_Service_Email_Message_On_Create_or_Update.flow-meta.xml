        <locationX>864</locationX>
        <locationY>647</locationY>
        <defaultConnectorLabel>Not sent to Contact</defaultConnectorLabel>
        <rules>
            <name>Email_Sent_to_Contact</name>
            <conditionLogic>1 AND (2 OR 3)</conditionLogic>
            <conditions>
